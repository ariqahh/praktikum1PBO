
package pola16;

import java.util.Scanner;

public class Pola16 {

    public static void main(String[] args) {
        Scanner input = new Scanner (System.in);
        int angka = input.nextInt();
        for (int i = 0; i < angka; i++) {
            for (int j = 0; j < (angka - i - 1); j++) {
                System.out.print("  ");
            }
            System.out.println("*");
            
        }
    }
    
}
