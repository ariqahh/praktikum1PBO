
package pola9;

import java.util.Scanner;


public class Pola9 {

    
    public static void main(String[] args) {
        Scanner input = new Scanner (System.in);
        int angka = input.nextInt();
        for (int i = 0; i < angka; i++) {
            for (int j = 0; j < i; j++) {
                System.out.print(" ");
            }
            for (int j = 0; j < (angka - i); j++) {
                System.out.print("* ");
            }
            System.out.println();
    }
    
}
}
